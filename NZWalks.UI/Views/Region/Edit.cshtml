@model NZWalks.UI.Models.DTO.RegionDto
@{
}

<h1>Edit Region</h1>

@if (Model is not null)
{
    <h1 class="mt-3">Edit Region</h1>

    <form method="post">
        <div class="form-group">
            <label for="Code">ID</label>
            <input type="text" class="form-control" id="Id" name="Id" asp-for="Id" readonly />
        </div>

        <div class="form-group">
            <label for="Code">Código</label>
            <input type="text" class="form-control" id="Code" name="Code" required value="@Model?.Code" />
        </div>

        <div class="form-group">
            <label for="Name">Nombre</label>
            <input type="text" class="form-control" id="Name" name="Name" required value="@Model?.Name" />
        </div>

        <div class="form-group">
            <label for="RegionImageUrl">URL de la Imagen</label>
            <input type="text" class="form-control" id="RegionImageUrl" name="RegionImageUrl" value="@Model?.RegionImageUrl" />
        </div>

        <button type="submit" class="btn btn-primary">Editar</button>
        <a href="@Url.Action("Index", "Region")" class="btn btn-secondary">Cancelar</a>
    </form>
}