@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>



<div class="container mt-5">
    <h2 class="mt-3 mb-4">Regions</h2>

    <div class="d-flex justify-content-end">
        <a class="btn btn-secondary" asp-controller="Region" asp-action="Add" >Add Region</a>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Name</th>
                <th>Image</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.RegionImageUrl</td>
                        <td>
                            <a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">
                                Edit
                            </a>
                        </td>
                        <td>
                            <form asp-controller="Region" asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">No hay datos disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>